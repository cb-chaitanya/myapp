<apex:page controller="chargebeeapps.CBRouter" action="{!route}" tabStyle="chargebeeapps__CB_Subscription__c">
<apex:stylesheet value="{!URLFOR($Resource.chargebeeapps__CB_LAYOUT)}"/>
  <apex:sectionHeader title="Contacts" subtitle="Create Subscription" /> 
    <div class="cb-layout">
     <apex:form id="theform">
     <apex:pageBlock id="pb1" >  
          <Apex:pageBlockSection title="Select a Contact"  collapsible="False"/>
          <table cellspacing="8">
          <tr>
          <apex:outputPanel >
          <td>
          <apex:outputLabel >
          Please select a contact to create subscription : 
          </apex:outputLabel>
          </td>
          <td>
                       <apex:outputPanel styleClass="requiredInput" layout="block" >
                         <apex:outputPanel styleClass="requiredBlock" layout="block" />
                         <apex:selectList value="{!con_id}" multiselect="false" size="1" id="pid" style="width:180px;">
                              <apex:selectOptions value="{!options3}" />
                         </apex:selectlist>
                       </apex:outputpanel>
          </td>
          </apex:outputPanel>
          </tr>
          <tr><td>
              <apex:outputPanel styleClass="requiredInput" layout="block" >
                  <apex:commandButton action="{!createSubscription}" value="Create Subscription"/>
              </apex:outputPanel>
          </td></tr>
          </table>
          </apex:pageBlock>
      </apex:form>
       </div>   



</apex:page>